---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Projects from '../components/Projects/Projects';
import Footer from '../components/Footer.astro';
---

<Layout title="Proyectos">
	<Navbar />
	<main>
		<Projects client:load />
	</main>
	<Footer />
</Layout>

<style>
	main {
		padding-top: 80px;
		min-height: 100vh;
	}

	:global(.projects) {
		padding: 6rem 2rem;
		background: transparent;
		min-height: calc(100vh - 80px);
		position: relative;
	}

	:global(.projects-container) {
		max-width: 1200px;
		margin: 0 auto;
	}

	:global(.section-title) {
		font-size: 3rem;
		text-align: center;
		margin-bottom: 4rem;
		background: linear-gradient(135deg, #ffffff 0%, #a8a8a8 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	:global(.projects-grid) {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 2rem;
	}

	:global(.project-card) {
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(10px);
		border-radius: 16px;
		overflow: hidden;
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
	}

	:global(.project-card:hover) {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3);
		border-color: rgba(102, 126, 234, 0.4);
		background: rgba(255, 255, 255, 0.08);
	}

	:global(.project-image) {
		width: 100%;
		height: 220px;
		background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		overflow: hidden;
	}

	:global(.project-image::before) {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		opacity: 0.2;
	}

	:global(.project-image img) {
		width: 100%;
		height: 100%;
		object-fit: cover;
		position: relative;
		z-index: 1;
	}

	:global(.project-content) {
		padding: 2rem;
	}

	:global(.project-title) {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: #ffffff;
		font-weight: 600;
	}

	:global(.project-description) {
		color: #b0b0b0;
		line-height: 1.7;
		margin-bottom: 1.5rem;
		font-size: 0.95rem;
	}

	:global(.project-tech) {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
	}

	:global(.tech-tag) {
		background: rgba(102, 126, 234, 0.15);
		padding: 0.5rem 1rem;
		border-radius: 8px;
		font-size: 0.875rem;
		color: #e5e5e5;
		border: 1px solid rgba(102, 126, 234, 0.3);
		font-weight: 500;
		transition: all 0.3s ease;
	}

	:global(.tech-tag:hover) {
		background: rgba(102, 126, 234, 0.25);
		border-color: rgba(102, 126, 234, 0.5);
		transform: scale(1.05);
	}

	:global(.project-links) {
		display: flex;
		gap: 1rem;
	}

	:global(.project-link) {
		padding: 0.75rem 1.5rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		text-decoration: none;
		border-radius: 10px;
		font-size: 0.9rem;
		font-weight: 600;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
	}

	:global(.project-link:hover) {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
	}

	/* Light Theme */
	:global([data-theme="light"]) .section-title {
		background: linear-gradient(135deg, #1a1a1a 0%, #4a4a4a 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	:global([data-theme="light"]) .project-card {
		background: rgba(0, 0, 0, 0.03);
		border: 1px solid rgba(0, 0, 0, 0.1);
	}

	:global([data-theme="light"]) .project-card:hover {
		background: rgba(0, 0, 0, 0.05);
		border-color: rgba(102, 126, 234, 0.3);
		box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
	}

	:global([data-theme="light"]) .project-title {
		color: #1a1a1a;
	}

	:global([data-theme="light"]) .project-description {
		color: #444;
	}

	:global([data-theme="light"]) .tech-tag {
		background: rgba(102, 126, 234, 0.1);
		border: 1px solid rgba(102, 126, 234, 0.2);
		color: #333;
	}

	:global([data-theme="light"]) .tech-tag:hover {
		background: rgba(102, 126, 234, 0.2);
		border-color: rgba(102, 126, 234, 0.4);
	}

	@media (max-width: 768px) {
		main {
			padding-top: 70px;
		}

		:global(.projects) {
			padding: 4rem 1.5rem;
		}

		:global(.section-title) {
			font-size: 2rem;
			margin-bottom: 2.5rem;
		}

		:global(.projects-grid) {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 480px) {
		main {
			padding-top: 65px;
		}

		:global(.projects) {
			padding: 3rem 1rem;
		}

		:global(.section-title) {
			font-size: 1.75rem;
			margin-bottom: 2rem;
		}

		:global(.project-card) {
			margin-bottom: 1rem;
		}

		:global(.project-content) {
			padding: 1.5rem;
		}

		:global(.project-title) {
			font-size: 1.25rem;
		}

		:global(.project-description) {
			font-size: 0.9rem;
		}

		:global(.project-link) {
			padding: 0.875rem 1.25rem;
			min-height: 44px;
			width: 100%;
			text-align: center;
			-webkit-tap-highlight-color: rgba(102, 126, 234, 0.2);
		}

		:global(.project-links) {
			flex-direction: column;
		}
	}

	@media (max-width: 375px) {
		:global(.projects) {
			padding: 2.5rem 0.75rem;
		}

		:global(.section-title) {
			font-size: 1.5rem;
		}

		:global(.project-content) {
			padding: 1.25rem;
		}
	}
</style>

