---
// Hero component
const baseUrl = import.meta.env.BASE_URL;
const basePath = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
---

<section class="hero" data-parallax="0.3">
	<div class="hero-content">
		<h1 class="hero-title" data-i18n="hero.title">Bienvenido a mi Portafolio</h1>
		<p class="hero-subtitle" data-i18n="hero.subtitle">Desarrollador Full Stack Junior especializado en crear soluciones tecnol√≥gicas innovadoras</p>
		<div class="hero-tech">
			<div class="tech-logo" title="AWS">
				<img src={`${basePath}logos/aws.png`} alt="AWS" />
			</div>
			<div class="tech-logo" title="TypeScript">
				<img src={`${basePath}logos/typescript.png`} alt="TypeScript" />
			</div>
			<div class="tech-logo" title="Java">
				<img src={`${basePath}logos/java.png`} alt="Java" />
			</div>
			<div class="tech-logo angular-logo" title="Angular">
				<img src={`${basePath}logos/angular.png`} alt="Angular" />
			</div>
