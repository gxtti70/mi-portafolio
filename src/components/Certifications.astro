<style>
	.certifications {
		padding: 6rem 2rem;
		background: transparent;
		position: relative;
	}

	.certifications-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-title {
		font-size: 3rem;
		text-align: center;
		margin-bottom: 4rem;
		background: linear-gradient(135deg, #ffffff 0%, #a8a8a8 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	.certifications-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.certification-card {
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 16px;
		padding: 2rem;
		text-align: center;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.certification-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.certification-card:hover::before {
		transform: scaleX(1);
	}

	.certification-card:hover {
		background: rgba(255, 255, 255, 0.08);
		border-color: rgba(102, 126, 234, 0.4);
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
	}

	.certification-icon {
		width: 70px;
		height: 70px;
		margin: 0 auto 1.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
		border-radius: 16px;
		color: #667eea;
	}

	.certification-icon svg {
		width: 40px;
		height: 40px;
	}

	.certification-name {
		font-size: 1.3rem;
		font-weight: 600;
		color: #ffffff;
		margin-bottom: 0.5rem;
	}

	.certification-issuer {
		font-size: 1rem;
		color: #667eea;
		margin-bottom: 0.75rem;
		font-weight: 500;
	}

	.certification-date {
		display: inline-block;
		background: rgba(102, 126, 234, 0.2);
		padding: 0.5rem 1rem;
		border-radius: 8px;
		border: 1px solid rgba(102, 126, 234, 0.3);
		color: #b0b0b0;
		font-size: 0.9rem;
	}

	/* Light Theme */
	:global([data-theme="light"]) .section-title {
		background: linear-gradient(135deg, #1a1a1a 0%, #4a4a4a 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	:global([data-theme="light"]) .certification-card {
		background: rgba(0, 0, 0, 0.03);
		border: 1px solid rgba(0, 0, 0, 0.1);
	}

	:global([data-theme="light"]) .certification-card:hover {
		background: rgba(0, 0, 0, 0.05);
		border-color: rgba(102, 126, 234, 0.3);
		box-shadow: 0 10px 30px rgba(102, 126, 234, 0.15);
	}

	:global([data-theme="light"]) .certification-name {
		color: #1a1a1a;
	}

	:global([data-theme="light"]) .certification-date {
		color: #555;
		background: rgba(102, 126, 234, 0.1);
		border: 1px solid rgba(102, 126, 234, 0.2);
	}

	@media (max-width: 768px) {
		.certifications {
			padding: 4rem 2rem;
		}

		.section-title {
			font-size: 2rem;
			margin-bottom: 2.5rem;
		}

		.certifications-grid {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 480px) {
		.certifications {
			padding: 3rem 1.5rem;
		}

		.section-title {
			font-size: 1.75rem;
			margin-bottom: 2rem;
		}

		.certification-card {
			padding: 1.75rem 1.5rem;
		}

		.certification-name {
			font-size: 1.15rem;
		}

		.certification-issuer {
			font-size: 0.95rem;
		}
	}

	@media (max-width: 375px) {
		.certifications {
			padding: 2.5rem 1rem;
		}

		.section-title {
			font-size: 1.5rem;
		}

		.certification-card {
			padding: 1.5rem 1.25rem;
		}
	}
</style>

