</div>

<script>
	const shareToggle = document.getElementById('share-toggle');
	const shareDropdown = document.getElementById('share-dropdown');
	const shareOptions = document.querySelectorAll('.share-option');
	const currentUrl = window.location.href;
	const currentTitle = document.title;

	shareToggle?.addEventListener('click', (e) => {
		e.stopPropagation();
		shareDropdown?.classList.toggle('active');
	});

	document.addEventListener('click', (e) => {
		const target = e.target as Node;
		if (shareToggle && shareDropdown && 
			!shareToggle.contains(target) && 
			!shareDropdown.contains(target)) {
			shareDropdown.classList.remove('active');
		}
	});

	shareOptions.forEach(option => {
		option.addEventListener('click', (e) => {
			e.stopPropagation();
			const platform = option.getAttribute('data-platform');
			let shareUrl = '';

			switch(platform) {
				case 'whatsapp':
					shareUrl = `https://wa.me/?text=${encodeURIComponent(currentTitle + ' - ' + currentUrl)}`;
					break;
				case 'linkedin':
					shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`;
					break;
				case 'twitter':
					shareUrl = `https://twitter.com/intent/tweet?url=${encodeURIComponent(currentUrl)}&text=${encodeURIComponent(currentTitle)}`;
					break;
				case 'copy':
					navigator.clipboard.writeText(currentUrl).then(() => {
						const span = option.querySelector('span');
						if (span) {
							const originalText = span.textContent;
							span.textContent = 'Â¡Copiado!';
							setTimeout(() => {
								if (span) span.textContent = originalText;
							}, 2000);
						}
					});
					shareDropdown?.classList.remove('active');
					return;
			}

			if (shareUrl) {
				window.open(shareUrl, '_blank', 'width=600,height=400');
				shareDropdown?.classList.remove('active');
			}
		});
	});
</script>

<style>
	.share-buttons {
		position: fixed;
		bottom: 2rem;
		left: 2rem;
		z-index: 997;
	}

	.share-toggle {
		width: 50px;
		height: 50px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border: none;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
		color: white;
		transition: all 0.3s ease;
	}

	.share-toggle:hover {
		transform: scale(1.1);
		box-shadow: 0 6px 30px rgba(102, 126, 234, 0.6);
	}

	.share-toggle svg {
		width: 24px;
		height: 24px;
	}

	.share-dropdown {
		position: absolute;
		bottom: calc(100% + 0.5rem);
		left: 0;
		background: rgba(10, 10, 10, 0.98);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		padding: 0.5rem;
		min-width: 180px;
		opacity: 0;
		visibility: hidden;
		transform: translateY(10px);
		transition: all 0.3s ease;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
		pointer-events: none;
	}

	.share-dropdown.active {
		opacity: 1;
		visibility: visible;
		transform: translateY(0);
		pointer-events: all;
	}

	.share-option {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		width: 100%;
		padding: 0.75rem 1rem;
		background: transparent;
		border: none;
		border-radius: 8px;
		color: #e5e5e5;
		cursor: pointer;
		transition: all 0.3s ease;
		text-align: left;
		font-size: 0.95rem;
		text-decoration: none;
	}

	.share-option:hover {
		background: rgba(102, 126, 234, 0.2);
		color: #ffffff;
	}

	.share-option svg {
		width: 20px;
		height: 20px;
		flex-shrink: 0;
	}

	:global([data-theme="light"]) .share-dropdown {
		background: rgba(255, 255, 255, 0.98);
		border: 1px solid rgba(0, 0, 0, 0.1);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	:global([data-theme="light"]) .share-option {
		color: #333;
	}

	:global([data-theme="light"]) .share-option:hover {
		background: rgba(102, 126, 234, 0.15);
		color: #1a1a1a;
	}

	@media (max-width: 768px) {
		.share-buttons {
			bottom: 1rem;
			left: 1.5rem;
		}

		.share-toggle {
			width: 48px;
			height: 48px;
		}
	}

	@media (max-width: 480px) {
		.share-buttons {
			bottom: 0.75rem;
			left: 1rem;
		}

		.share-toggle {
			width: 44px;
			height: 44px;
		}

		.share-dropdown {
			min-width: 160px;
		}
	}
</style>

